{
  "name": "@narasimhaponnada/mermaid-mcp-server",
  "version": "1.0.0",
  "description": "AI-powered Mermaid diagram generation using Model Context Protocol. Works with GitHub Copilot, Claude, and any MCP-compatible client. Generate flowcharts, sequence diagrams, architecture diagrams, and more from natural language.",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "prepublishOnly": "npm run build",
    "test": "echo \"Tests coming soon\" && exit 0",
    "generate-samples": "node generate-svg-samples.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "mermaid",
    "mermaid-diagrams",
    "diagrams",
    "flowchart",
    "sequence-diagram",
    "architecture-diagram",
    "github-copilot",
    "claude-ai",
    "ai-tools",
    "ai-assistant",
    "svg",
    "visualization",
    "diagram-generation",
    "typescript",
    "developer-tools",
    "documentation",
    "devtools"
  ],
  "author": "Narasimha Rao Ponnada <narasimha.ponnada@hotmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Narasimhaponnada/mermaid-mcp.git",
    "directory": "mermaid-mcp-server"
  },
  "bugs": {
    "url": "https://github.com/Narasimhaponnada/mermaid-mcp/issues"
  },
  "homepage": "https://github.com/Narasimhaponnada/mermaid-mcp#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "puppeteer": "^23.10.4"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "bin": {
    "mermaid-mcp": "./dist/index.js"
  },
  "files": [
    "dist/",
    "src/",
    "examples/",
    "generate-svg-samples.js",
    "README.md",
    "PROJECT-SUMMARY.md",
    "LICENSE",
    "tsconfig.json"
  ],
  "publishConfig": {
    "access": "public"
  }
